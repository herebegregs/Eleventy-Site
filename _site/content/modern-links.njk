{% extends "partials/modern-tab.njk" %}

{% block tabTitle %}
Links
{% endblock %}

{% block tabVar %}
links
{% endblock %}

{% block tabIcon %}
{% svgIcon "_site/images/icons/menu.svg" %}
{% endblock %}

{% block tabContent %}
    <div class="page-wrapper">
        <h1>Links Menu</h1>
        <div class="links-menu">
            <ul>
                {% for link in navigation.links %}
                    {% if link.var != 'modern' %}
                        <li data-details="{{link.var}}">
                            <a href="{{link.url}}" target="{{link.target}}">{{link.title}}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="flyout">
        {% for link in navigation.links %}
        {% if link.var != 'modern' %}
            <div class="flyout-details"  data-details="{{link.var}}">
                <h3>{{ link.description.title}}</h3>
                {% for line in link.description.details %}
                    <p>{{ line.line}}</p>
                {% endfor %}
            </div>
        {% endif %}
        {% endfor %}
    </div>
{% endblock %}