<div id="task-bar">
    <nav id="start-menu">
        <div class="sidebar">
            <span class="large">Greg </span>
            <span class="small">Morris</span>
        </div>
        <div class="main-menu">
            <ul class="menu-list">
                {% for page in navigation.pages %}
                    <li {%if page.var == "links" %} class="has-menu"{% endif %}>
                        <button href="#" data-target="{{page.var}}-window">
                            <img class="start-icon" src="{{page.iconWindows}}"/>
                            <span>{{page.title}}</span>
                            {%if page.var == "links" %}{% svgIcon "_site/images/icons/angle-right.svg" %}{% endif %}
                        </button>
                        {%if page.var == "links" %}
                            <ul class="sub-menu">
                                {% for link in navigation.links %}
                                    <li><a href="{{link.url}}"><img class="win-icon" src="{{link.iconWindows}}"/><span>{{ link.title }}<span></a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
