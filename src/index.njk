<div class="desktop">
    {% for page in navigation.pages %}
        <button class="desktop-icon" data-target="{{page.var}}-window">
            <img class="desktop-icon-img" src="{{page.iconWindows}}"/>
            <p>{{page.title}}</p>
        </button>
    {% endfor %}
    <button class="desktop-icon" data-target="readme-window">
        <img class="desktop-icon-img" src="images/readme.png"/>
        <p>readme.txt</p>
    </button>
</div>
{% for page in navigation.pages %}
    <div id="{{page.var}}-window" class="window">
        {% include "./content/windows-"+page.var+".njk" %}
    </div>
{% endfor %}
